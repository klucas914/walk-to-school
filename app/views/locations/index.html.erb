<h2>My Locations</h2>

<table class="table table-bordered">
	<tr>
		<th>Location Name</th>
		<th>Address</th>
	</tr>

	<% @locations.each do |location| %>
	 
	  	<tr>
	  		<td><%= location.name %></td>
	  		<td><%= location.address %></td>
	  		<td><%= link_to 'Edit', edit_location_path(location) %></td>
	  		<td><%= link_to 'Destroy', location_path(location), method: :delete, data: { confirm: 'Are you sure?'} %></td>
	  	</tr>
	 <% end %>
</table>
